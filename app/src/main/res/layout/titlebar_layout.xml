<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titlebar_layout"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/dimen_48dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_back_left_btn"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_13dp"
        android:background="@drawable/nav_btn_back"
        android:textColor="@color/title_text_color"
        android:textSize="@dimen/dimen_18dp" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_back_left_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_toRightOf="@id/tv_back_left_btn"
        android:text="全部频道"
        android:textColor="@color/c_333333"
        android:textSize="@dimen/dimen_18sp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="title"
        android:textSize="@dimen/dimen_18sp" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_right_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_13dp"
        android:text="@string/app_name"
        android:textSize="@dimen/dimen_14sp" />

    <TextView
        android:id="@+id/tv_right_desc_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/tv_right_desc"
        android:text="ss"
        android:visibility="gone"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:textSize="@dimen/dimen_14sp" />

</RelativeLayout>